{
  "name": "auth0-template-generator",
  "version": "1.0.0",
  "description": "Auth0 internationalized email template generator with secure Liquid template processing",
  "main": "./src/main.ts",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "yarn clean && tsc && yarn copy-languages && yarn copy-templates",
    "clean": "rm -rf ./dist",
    "copy-languages": "mkdir -p ./dist/languages && cp -r ./src/languages/* ./dist/languages",
    "copy-templates": "cp -r ./src/templates/*.html ./dist/templates",
    "generate": "rm -rf ./output && node ./dist/src/main.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "dev": "yarn build && yarn generate"
  },
  "dependencies": {
    "fs-extra": "^9.0.12"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.12",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.0.0",
    "html-validator": "^5.1.18",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.2",
    "prettier": "^3.2.5",
    "serve": "^14.0.1",
    "typescript": "^4.7.4"
  }
}
